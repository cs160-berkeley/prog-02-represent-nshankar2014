<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.neilshankar.prog02ww.RepDetail">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/bigface"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/face1"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pat Toomey (R)"
                android:id="@+id/name"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/bigface"
                android:layout_centerHorizontal="true"
                android:textSize="11pt"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U.S. Senator"
                android:id="@+id/textView8"
                android:textColor="#000000"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="11pt"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:id="@+id/textView9"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textSize="9pt"
                android:textIsSelectable="false"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Term ends Nov 2018"
                android:id="@+id/textView10"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView9"
                android:layout_alignStart="@+id/bigface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: pattoomey@pa.gov"
                android:id="@+id/textView11"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView10"
                android:layout_alignStart="@+id/bigface" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website: pattoomey.senate.gov"
                android:id="@+id/textView12"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Committee Assignments"
                android:id="@+id/textView16"
                android:textColor="#000000"
                android:textSize="9pt"
                android:textIsSelectable="false"
                android:layout_below="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U.S. Senate Committee on Finance"
                android:id="@+id/textView13"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView16"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U.S. Senate Committee on Budget"
                android:id="@+id/textView14"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView13"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U.S. Senate Committee on Banking"
                android:id="@+id/textView15"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView14"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Bills Sponsored"
                android:id="@+id/textView17"
                android:textColor="#000000"
                android:textSize="9pt"
                android:textIsSelectable="false"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView15"
                android:layout_alignStart="@+id/textView15"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eric Williams Act of 2015 (introduced 01/15/2016)"
                android:id="@+id/textView18"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView17"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General of the Army Omar Bradley Act of 2015 (introduced 05/15/2015)"
                android:id="@+id/textView19"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Justice for Victims of Iranian Terrorrism (introduced 01/05/2014)"
                android:id="@+id/textView20"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView19"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fairness for Crimes Victim Act (introduced 02/13/2012)"
                android:id="@+id/textView21"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView20"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capital Markets Act (introduced 01/04/2011)"
                android:id="@+id/textView22"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView21"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Tweets"
                android:id="@+id/textView23"
                android:textColor="#000000"
                android:textSize="9pt"
                android:textIsSelectable="false"
                android:layout_below="@+id/textView12"
                android:layout_alignStart="@+id/textView22"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is twitter?"
                android:id="@+id/textView24"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView23"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I love tweeting."
                android:id="@+id/textView25"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView24"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tweeting is the new snail mail."
                android:id="@+id/textView26"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView25"
                android:layout_alignParentStart="true" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
