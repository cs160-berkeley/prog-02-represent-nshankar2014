<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#f2f2f2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Representatives"
                android:id="@+id/maintext"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:textSize="14pt"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:id="@+id/card0"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maintext"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:background="#ffffff">

                <ImageButton
                    android:id="@+id/img0"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/face1"
                    android:background="@null"
                    android:clickable="true"
                    />

                <LinearLayout
                    android:id="@+id/linlay0"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:layout_marginTop="10dp"
                        android:textSize="11pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/title0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:textSize="11pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/email0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:linksClickable="true"
                        android:autoLink="email"
                        android:textSize="6pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textColorLink="#9020c5"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/website0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:linksClickable="true"
                        android:autoLink="web"
                        android:textSize="6pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textColorLink="#9020c5" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tweetwrapper0"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView android:id="@+id/tweet0"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:divider="#e1e8ed"
                            android:dividerHeight="1dp"
                            android:drawSelectorOnTop="false"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/seemore0"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="SEE MORE"
                        android:layout_gravity="center_horizontal"
                        android:background="#9020c5"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/card1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card0"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:background="#ffffff">

                <ImageButton
                    android:id="@+id/img1"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/face1"
                    android:background="@null"
                    android:clickable="true"
                    />

                <LinearLayout
                    android:id="@+id/linlay1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:layout_marginTop="10dp"
                        android:textSize="11pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:textSize="11pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/email1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:linksClickable="true"
                        android:autoLink="email"
                        android:textSize="6pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textColorLink="#9020c5"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/website1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:linksClickable="true"
                        android:autoLink="web"
                        android:textSize="6pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textColorLink="#9020c5"/>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tweetwrapper1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView android:id="@+id/tweet1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:divider="#e1e8ed"
                            android:dividerHeight="1dp"
                            android:drawSelectorOnTop="false"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/seemore1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="SEE MORE"
                        android:layout_gravity="center_horizontal"
                        android:background="#9020c5"
                        android:textColor="#ffffff"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/card2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:background="#ffffff">

                <ImageButton
                    android:id="@+id/img2"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/face1"
                    android:background="@null"
                    android:clickable="true"
                    />

                <LinearLayout
                    android:id="@+id/linlay2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:layout_marginTop="10dp"
                        android:textSize="11pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:textSize="11pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/email2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:linksClickable="true"
                        android:autoLink="email"
                        android:textSize="6pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textColorLink="#9020c5"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/website2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_____"
                        android:linksClickable="true"
                        android:autoLink="web"
                        android:textSize="6pt"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:textColorLink="#9020c5" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tweetwrapper2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView android:id="@+id/tweet2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:divider="#e1e8ed"
                            android:dividerHeight="1dp"
                            android:drawSelectorOnTop="false"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/seemore2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="SEE MORE"
                        android:layout_gravity="center_horizontal"
                        android:background="#9020c5"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
