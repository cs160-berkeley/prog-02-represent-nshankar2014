<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.neilshankar.prog02ww.EnterLocation"
    android:background="#f2f2f2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who Represents You?"
        android:id="@+id/maintext"
        android:textColor="#000000"
        android:textSize="14pt"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn about your congressional representatives."
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/maintext"
        android:layout_centerHorizontal="true"
        android:textSize="9pt"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your zip code:"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textSize="9pt"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/zip_input"
        android:hint="20059"
        android:textAlignment="center"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="15pt"
        android:textColor="#9020c5"
        android:textColorHint="#cdb1e0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="CONTINUE"
        android:id="@+id/enter"
        android:background="#9020c5"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="9pt"
        android:state_pressed="true"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="OR use your location"
        android:id="@+id/use_my_location"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/zip_input"
        android:textSize="8pt"
        android:background="#f4c6c8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zip code must be 5 digits."
        android:id="@+id/errorMsg"
        android:textColor="#9020c5"
        android:textSize="9pt"
        android:layout_above="@+id/enter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:visibility="invisible" />
</RelativeLayout>
