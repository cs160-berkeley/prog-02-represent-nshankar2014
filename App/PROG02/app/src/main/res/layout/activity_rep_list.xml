<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.neilshankar.prog02.RepList"
    android:background="#faecec">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Representatives"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/card1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="#ffffff">

            <ImageButton
                android:id="@+id/img1"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/face1"
                android:background="@null"
                android:clickable="true"
                />

            <LinearLayout
                android:id="@+id/text1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pat Toomey (R)"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="U.S. Sentator" />

                <TextView
                    android:id="@+id/email1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: pattoomey@pa.gov" />

                <TextView
                    android:id="@+id/website1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website: pattoomey.senate.gov" />

                <TextView
                    android:id="@+id/tweet1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest tweet: &quot;I love this country.&quot;" />

                <Button
                    android:id="@+id/seemore1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEE MORE"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/card2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="#ffffff">

            <ImageButton
                android:id="@+id/img2"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/face1"
                android:background="@null"
                android:clickable="true"
                />

            <LinearLayout
                android:id="@+id/text2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pat Toomey (R)"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="U.S. Sentator" />

                <TextView
                    android:id="@+id/email2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: pattoomey@pa.gov" />

                <TextView
                    android:id="@+id/website2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website: pattoomey.senate.gov" />

                <TextView
                    android:id="@+id/tweet2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest tweet: &quot;I love this country.&quot;" />

                <Button
                    android:id="@+id/seemore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEE MORE"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/card3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="#ffffff">

            <ImageButton
                android:id="@+id/img3"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/face1"
                android:background="@null"
                android:clickable="true"
                />

            <LinearLayout
                android:id="@+id/text3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pat Toomey (R)"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="U.S. Sentator" />

                <TextView
                    android:id="@+id/email3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: pattoomey@pa.gov" />

                <TextView
                    android:id="@+id/website3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website: pattoomey.senate.gov" />

                <TextView
                    android:id="@+id/tweet3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest tweet: &quot;I love this country.&quot;" />

                <Button
                    android:id="@+id/seemore3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEE MORE"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
